---
import ItemNavigation from "./ItemNavigation.astro"

const MENU_OPTIONS = [
    { name: 'Home', path: '/' },
    { name: 'About', path: '/about' },
    { name: 'Services', path: '/services' },
    { name: 'Resume', path: '/resume' },
    { name: 'Contact', path: '/contact' },
]

---

<div class=`w-11/12 md:w-[600px] md:h-12 transition-all
    fixed bottom-5 left-1/2 -translate-x-1/2 grid grid-cols-3 md:grid-cols-5 rounded-3xl
    bg-transparent hover:border-2 hover:border-[#fff]
    hover:cursor-pointer gap-2 justify-center `>
    {
        MENU_OPTIONS.map((item)=>
            <ItemNavigation name={item.name} path={item.path}/>
        )
    }
</div>


